<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:typeface">monospace</item> //隐藏状态栏
        <!-- Customize your theme here. -->
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/main_text_black</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowBackground">@color/main_backgound</item>
        <item name="android:textColor">@color/theme_content</item>
        <!--<item name="colorControlActivated">@color/colorAccent</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/BaseTheme">

    </style>

    <style name="AppTheme.Splash" parent="@style/AppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

        <!--
                <item name="android:windowTranslucentNavigation">true</item>
        -->
        <!--
                <item name="android:windowFullscreen">true</item>
        -->
    </style>

    <style name="text_flag_01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/flag_01</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--<style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light"/>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar_textsize">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_text_black</item>
    </style>

    <style name="toolbar_layout_coll_title_style" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_text_black</item>
    </style>

    <style name="toolbar_layout_ex_title_style" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_text_black</item>
    </style>

    <style name="main_text_white">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_text_blue">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="toolbar_layout_title_style">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/theme_toolbar_title</item>
    </style>

    <style name="toolbar_layout_title_white_style">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="main_btn_blue_44">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_bg_blue_6_corner</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="main_btn_white_48">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/btn_stroke_blue</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_btn_gray_44">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_gray_corner</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_btn_gray_disable">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_gray_e7ecf4</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_text_tips_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_black</item>
    </style>


    <style name="bottomDialogStyle">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_dialog_out</item>
    </style>

    <style name="centerDialogStyle">
        <item name="android:windowEnterAnimation">@anim/anim_center_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_center_dialog_out</item>
    </style>

    <style name="main_material_btn">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tx_cross_link_token">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:background">@color/dark_20_blue</item>
    </style>

    <style name="tx_status_success">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_green</item>
        <item name="android:background">@color/color_20_green</item>
    </style>

    <style name="tx_status_fail">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_red</item>
        <item name="android:background">@color/color_20_red</item>
    </style>

    <style name="bt_theme_blue" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/btn_stroke_blue</item>
        <item name="android:layout_height">42dip</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ck_hidden_small">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/selector_theme_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <!--分割线-->
    <style name="divider_line_style">
        <item name="android:background">@color/divider_line_color</item>
        <item name="android:height">1px</item>
    </style>

    <!--对话框标题-->
    <style name="dialog_title_style">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_text_black</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@color/white</item>
        <item name="android:headerDividersEnabled">true</item>
    </style>

    <!--提取收益和分红内容中的颜色-->
    <style name="reinvesrt_content_style">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/tranfer_stoke_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>
