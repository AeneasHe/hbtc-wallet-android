<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_top"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/card_backgound"
        app:cardForegroundColor="@color/bg_trans"
        app:cardPreventCornerOverlap="true"
        app:cardMaxElevation="5dp"
        app:contentPadding="1dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_coin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@mipmap/ic_transfer_in"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            />

    </com.google.android.material.card.MaterialCardView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/tranfer_action_text_color"
        tools:text="转入"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/layout_top"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
