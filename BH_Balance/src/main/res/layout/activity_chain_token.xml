<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ChainTokenActivity">

    <include layout="@layout/layout_toolbar" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/layout_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_index_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/main_margin_left"
                    android:layout_marginEnd="@dimen/main_margin_right"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp"
                    tools:background="@drawable/shape_btn_blue">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_token_name"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        tools:text="HBC" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_token_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_token_name"
                        android:gravity="center_vertical"
                        android:maxWidth="250dp"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        tools:text="HBC2iohoihsfiohHBC2iohoihsfiohHBC2iohoihsfiohHBC2iohoihsfioh" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_paste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_token_address"
                        android:layout_marginEnd="@dimen/page_margin_start"
                        android:layout_toRightOf="@+id/tv_token_address"
                        android:src="@mipmap/ic_paste" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_token_qr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:src="@mipmap/ic_qr_code" />

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_token_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:overScrollMode="never" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>