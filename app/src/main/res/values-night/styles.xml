<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/main_backgound</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:statusBarColor">@color/main_backgound</item>
        <item name="android:windowBackground">@color/main_backgound</item>
        <item name="android:textColor">@color/theme_content</item>
        <!--<item name="colorControlActivated">@color/colorAccent</item>-->
    </style>

    <style name="main_btn_gray_disable">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/border_button_bg_color</item>
        <item name="android:background">@drawable/btn_disabled_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <!--对话框标题-->
    <style name="dialog_title_style">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/theme_nav_title</item>
    </style>

</resources>
