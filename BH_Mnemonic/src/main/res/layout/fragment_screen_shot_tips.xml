<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/frame_bg_white_16_corner"
    tools:context=".ui.fragment.ScreenShotTipsFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_close"
        android:paddingEnd="16dp"
        android:paddingTop="22dp"
        android:layout_alignParentEnd="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_shot_phone"
            android:layout_gravity="center"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textSize="17sp"
            android:textColor="@color/main_text_black"
            android:layout_gravity="center"
            android:text="请勿截屏"
            android:textStyle="bold"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_i_know"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="@dimen/main_padding_right"
            android:layout_marginStart="@dimen/main_padding_left"
            style="@style/main_btn_blue_44"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我知道了"
            />
    </LinearLayout>

</RelativeLayout>